{translation, "emqx_lorawan_gateway.hooks", fun(Conf) ->
  Hooks = cuttlefish_variable:filter_by_prefix("emqx_lorawan_gateway.hook", Conf),
  lists:map(
    fun({[_, _, Name1, Name2, _], Val}) ->
	  {lists:concat([Name1, ".", Name2]), Val}
	end, Hooks)
end}.
